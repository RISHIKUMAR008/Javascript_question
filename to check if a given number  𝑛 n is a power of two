function isPowerOfTwo(n) {
    if (n < 1) {
        return false;
    } else if (n === 1) {
        return true;
    } else {
        while (n % 2 === 0) {
            n = n / 2;
        }
        return n === 1;
    }
}

// Test cases
console.log(isPowerOfTwo(16)); // true
console.log(isPowerOfTwo(20)); // false
console.log(isPowerOfTwo(1));  // true
console.log(isPowerOfTwo(5));  // false
